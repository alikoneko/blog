<h1>
    Posts
</h1>
<table class="table table-hover" >
    <tr>
        <th>title</th>
        <th>tags</th>
        <th>date</th>
    </tr>
    <% posts.each do |post| %>
    <tr>
        <td><%= post.render_title %></td>
        <td class="tags"><%= post.render_tag_list %></td>
        <td><%= post.render_created_at %></td>
        <% if current_user.present? %>
            <td><%= post.render_edit_button %></td>
        <% end %>
    </tr>
    <% end %>
</table>

