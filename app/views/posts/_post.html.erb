<div class="col-md-9">
    <div class="panel-post panel">
        <div class="panel-heading">
            <h2 class="panel-title">
                <%= post.render_title %>
                <small>by Ali at <%= post.render_created_at %></small>
                <% if current_user.present? %>
                    <div class="pull-right">
                        <%= post.render_edit_button  %>
                    </div>
                <% end %>
            </h2>
        </div>
        <div class="panel-body">
            <%= post.render_body %>
        </div>
        <div class="tags panel-footer">
            <%= post.render_tag_list %>
        </div>
    </div>
</div>


