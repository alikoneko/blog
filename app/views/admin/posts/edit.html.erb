<%= simple_form_for [:admin, @post], html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :title, wrapper: :medium_input %>
    <%= f.input :body, input_html: { rows: 10 } %>
    <%= f.input :tag_list, wrapper: :medium_input %>
    <%= f.input :status, include_blank: false, wrapper: :small_input %>
    <div class="form-group">
        <div class="col-md-5 col-md-offset-2">
            <%= f.button :submit, "Submit", id: 'submit_post'%>
        </div>
    </div>
<% end %>