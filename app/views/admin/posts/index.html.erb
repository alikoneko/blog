<h1 class="clearfix">
    Welcome, Ali
    <div class="pull-right">
        <% if params[:show_all].present? %>
            <%= link_to "Show Current", [:admin, :posts], class: 'btn btn-secondary' %>
        <% else %>
            <%= link_to "Show All", polymorphic_path([:admin, :posts], show_all: true), class: 'btn btn-secondary' %>
        <% end %>
        <%= link_to "New", [:new, :admin, :post], class:"btn btn-primary-theme" %>
    </div>
</h1>

<table  class="table table-hover">
    <tr>
        <th>title</th>
        <th>tags</th>
        <th>status</th>
        <th>created at</th>
        <th>updated at</th>
        <th></th>
    </tr>
    <% posts.each do |post|%>
        <tr>
            <td><%= post.render_title %></td>
            <td class="tags">
                <%= post.render_tag_list %>
            </td>
            <td><%= post.status %></td>
            <td><%= post.render_created_at %></td>
            <td><%= post.render_updated_at %></td>
            <td><%= link_to [:edit, :admin, post], class:"btn btn-success btn-xs" do %><i class="glyphicon glyphicon-pencil"></i><% end %></td>
        </tr>
    <% end %>
</table>
