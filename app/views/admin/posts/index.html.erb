<h1 class="clearfix">
    Welcome, Ali
    <div class="pull-right">
        <% if params[:show_all].present? %>
            <%= link_to "Show Current", [:admin, :posts], class: 'btn btn-secondary' %>
        <% else %>
            <%= link_to "Show All", polymorphic_path([:admin, :posts], show_all: true), class: 'btn btn-secondary' %>
        <% end %>
        <%= link_to "New", [:new, :admin, :post], class:"btn btn-primary-theme" %>
    </div>
</h1>

<table  class="table table-hover">
    <tr>
        <th>title</th>
        <th>tags</th>
        <th>status</th>
        <th>created at</th>
        <th>updated at</th>
        <th></th>
    </tr>
    <% posts.each do |post|%>
        <tr>
            <td><%= link_to post.title, [:admin, post] %></td>
            <td class="tags">
                <% post.tag_list.each do |tag| %>
                        <span class="label label-tags">
                            <%= link_to tag, tag_path(tag) %>
                        </span>
                <% end %>
            </td>
            <td><%= post.status %></td>
            <td><%= post.created_at.localtime.strftime("%A, %B %e, %Y at %I:%M%p") %></td>
            <td><%= post.updated_at.localtime.strftime("%A, %B %e, %Y at %I:%M%p") %></td>
            <td><%= link_to [:edit, :admin, post], class:"btn btn-success btn-xs" do %><i class="glyphicon glyphicon-pencil"></i><% end %></td>
        </tr>
    <% end %>
</table>
