<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">Tags</h2>
    </div>
    <div class="panel-body tag-cloud">
        <% tag_cloud(@tags, %w[s m l]) do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
    </div>
</div>